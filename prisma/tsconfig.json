{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs", 
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strictFunctionTypes":false,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "dist", 
    "lib": [
      "es5", "es6",
      "dom",
      "es2017.object",
      "esnext.asynciterable"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
