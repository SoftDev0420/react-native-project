{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "dist",
    "types": ["node"],
    "lib": ["es2017", "esnext.asynciterable"],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "dist"
    ]
  }
}
