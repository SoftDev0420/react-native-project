{
  "compilerOptions": {
    "plugins": [
      {
        "name": "@divyenduz/ts-graphql-plugin"
      }
    ],
    "jsx": "preserve",
    // resolve modules as you would expect
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "rootDir": "./prisma/src",
    "outDir": "prisma/dist",
    "target": "ES5",
    "module": "commonjs", 
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strictFunctionTypes": false,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5", "es6", "dom", "es2017.object", "esnext.asynciterable"]
  },
  "include": ["prisma/src/**/*.ts", "prisma/src/**/*.js", "prisma/src/*.js"],
  "exclude": ["prisma/dist", "node_modules", "**/node_modules", "**/*.spec.ts"]
}
